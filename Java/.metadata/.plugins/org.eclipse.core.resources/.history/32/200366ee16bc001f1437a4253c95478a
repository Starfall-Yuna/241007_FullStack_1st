
public class operator {
	public static void main(String args[]) {
		// 산술연산자 :: +, -, *, /, %
		// 대입연산자 :: =
		//		(+=, -=, *=, /=, %=)
		// 논리연산자 :: (AND)&&, & / (OR)||, |
		boolean tf = 2==2 || 5!=1;
			// | :: 첫번째 항(2==2), 두번째 항(5!=1) 모두 비교한 뒤 tf=true임을 적용
			// || :: 첫번째 항이 참이기 때문에, 두번째 항 살펴보지 않고 tf=true임을 적용
		boolean tf2 = 2!=2 && 6==3;
			// & :: 첫번째 항(2!=2), 두번째 항(6==3) 모두 비교한 뒤 tf2=false임을 적용
			// && :: 첫번째 항이 거짓이기 때문데, 두번째 항 살펴보지 않고 tf2=false임을 적용
		// 비교연산자 :: <, >, <=, >=, ==, !=
		// 증감연산자 :: ++, --
		// 삼항연산자 :: ?
	}
}
